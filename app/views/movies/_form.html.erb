<%= form_for movie do |f| %>
  <div class="mb-3">
    <div class="movie__field">
      <%= f.label :title, 'Título', class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="movie__field">
      <%= f.label :year, 'Ano de lançamento', class: "form-label" %>
      <%= f.number_field :year, class: "form-control" %>
    </div>
    <div class="movie__field">
      <%= f.label :synopsis, 'Sinopse', class: "form-label" %>
      <%= f.text_area :synopsis, class: "form-control" %>
    </div>
    <div class="movie__field">
      <%= f.label :country, 'País de origem', class: "form-label" %>
      <%= f.collection_select :country_id, Country.order(:name), :id, :name, {}, { class: "form-select" } %>
    </div>
    <div class="movie__field">
      <%= f.label :duration, 'Duração (min)', class: "form-label" %>
      <%= f.number_field :duration, class: "form-control" %>
    </div>
    <div class="movie__field">
      <%= f.label :director, 'Diretor(a)', class: "form-label" %>
      <%= f.collection_select :director_id, Director.order(:name), :id, :name, {}, { class: "form-select" } %>
    </div>
    <div class="movie__field">
      <%= f.label :genre, 'Gênero', class: "form-label" %>
      <%= f.collection_select :genre_id, Genre.order(:name), :id, :name, {}, { class: "form-select" } %>
    </div>
    <div class="movie__field">
      <%= f.label :release, 'Lançamento', class: "form-label" %>
      <%= f.check_box :release, { checked: movie.released? }, :released, :not_released %>
    </div>
    <div class="movie__field">
      <%= f.label :status, 'Status', class: "form-label" %>
      <%= f.check_box :status, { checked: movie.published? }, :published, :draft %>
    </div>
    <div class="movie__field">
      <%= f.label :image, 'Imagem', class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="movies__btn-add">
      <%= f.submit 'Salvar', class: "btn btn-success" %>
    </div>
  </div>  
<% end %>