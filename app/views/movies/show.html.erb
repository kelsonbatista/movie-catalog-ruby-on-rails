<main>
  <section class="movies">
    <div class="movies__title main__title">
      <h1>Filmes</h1>
      <div class="movies__btn-add">
      <%= link_to 'Adicionar Filme', new_movie_path, class: "btn btn-primary" %>
      <%= link_to 'Voltar', root_path, class: "btn btn-primary" %>
    </div>
    </div>
    <div class="movies__show">
      <div class="movies__show-item">
        <img src="<%= @movie.image.url %>" alt="<%= @movie.title %>" class="movies__show-image">
      </div>
      <div class="movies__show-group">
        <div class="movies__show-item"><h1><%= @movie.title %></h1></div>
        <div class="movies__show-item"><strong>País de origem: </strong><%= @movie.country.name %></div>
        <div class="movies__show-item"><strong>Diretor(a): </strong><%= @movie.director.name %></div>
        <div class="movies__show-item"><strong>Gênero: </strong><%= @movie.genre.name %></div>
        <div class="movies__show-item"><strong>Lançamento: </strong><%= @movie.release %></div>
        <div class="movies__show-item"><strong>Status: </strong><%= @movie.status %></div>
        <div class="movies__show-item-actions">
          <%= link_to 'Editar', edit_movie_path(@movie.id), class: "btn btn-warning" %>
          <%= link_to 'Excluir', 
            movie_path(@movie.id), 
            data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, 
            class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </section>
</main>