<main>
  <section class="genres__show">
    <div class="genres__show-title">
      <h1>Gêneros</h1>
      <div class="genres__btn-add">
        <%= link_to 'Adicionar Gênero', new_genre_path, class: "btn btn-primary" %>
      </div>
    </div>
    <table class="genres__list table table-striped-col">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Editar / Excluir</th>
        </tr>
      </thead>
      <tbody>
        <tr class="genres__list-item">
          <td class="genres__list-item-name">
            <%= @genre.name %>
          </td>
          <td class="genres__list-item-actions">
            <%= link_to 'Editar', edit_genre_path(@genre.id), class: "btn btn-warning" %>
            <%= link_to 'Excluir', 
              genre_path(@genre.id), 
              data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, 
              class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
    </table>
  </section>
  <section class="directors">
    <div class="directors__title">
      <h2>Diretores que gostam desse gênero</h2>
    </div>
    <table class="directors__list table table-striped-col">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Nacionalidade</th>
          <th scope="col">Gênero favorito</th>
          <th scope="col">Editar / Excluir</th>
        </tr>
      </thead>
      <tbody>
        <% Director.where(genre_id: @genre.id).each do |director| %>
          <tr class="directors__list-item">
            <td class="directors__list-item-name">
              <%= link_to director.name, director_path(director) %>
            </td>
            <td class="directors__list-item-country">
              <%= director.country.name %>
            </td>
            <td class="directors__list-item-genero">
              <%= director.genre.name %>
            </td>
            <td class="directors__list-item-actions">
              <%= link_to 'Editar', edit_director_path(director), class: "btn btn-warning" %>
              <%= link_to 'Excluir', 
                director_path(director), 
                data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, 
                class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <section class="directors">
    <div class="directors__title">
      <h2>Filmes desse gênero</h2>
    </div>
    <table class="directors__list table table-striped-col">
      <thead>
        <tr>
          <th scope="col">Título</th>
          <th scope="col">Ano</th>
          <th scope="col">Diretor</th>
          <th scope="col">Editar / Excluir</th>
        </tr>
      </thead>
      <tbody>
        <% Movie.where(genre_id: @genre.id).each do |movie| %>
          <tr class="directors__list-item">
            <td class="directors__list-item-name">
              <%= link_to movie.title, movie_path(movie) %>
            </td>
            <td class="directors__list-item-country">
              <%= movie.year %>
            </td>
            <td class="directors__list-item-genero">
              <%= movie.director.name %>
            </td>
            <td class="directors__list-item-actions">
              <%= link_to 'Editar', edit_movie_path(movie), class: "btn btn-warning" %>
              <%= link_to 'Excluir', 
                movie_path(movie), 
                data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }, 
                class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</main>