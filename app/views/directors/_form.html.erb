      <%= form_for director do |f| %>
        <div class="movie__field">
          <%= f.label :name, 'Nome', class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="movie__field">
          <%= f.label :country, 'Nacionalidade', class: "form-label" %>
          <%= f.collection_select :country_id, Country.order(:name), :id, :name, {}, { class: "form-select" } %>
        </div>
        <div class="movie__field">
          <%= f.label :birthdate, 'Data de Nascimento', class: "form-label" %>
          <%= f.date_field :birthdate, class: "form-control" %>
        </div>
        <div class="movie__field">
          <%= f.label :genre, 'GÃªnero favorito', class: "form-label" %>
          <%= f.collection_select :genre_id, Genre.order(:name), :id, :name, {}, { class: "form-select" } %>
        </div>
        <div class="movies__btn-add">
          <%= f.submit 'Salvar', class: "btn btn-success" %>
        </div>
      <% end %>